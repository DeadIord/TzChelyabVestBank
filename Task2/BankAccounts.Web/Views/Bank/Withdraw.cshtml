@model BankAccount.Core.Models.Account

<h1 class="mb-4">Снятие средств</h1>

<form method="post" class="mb-4">
    <div class="mb-3">
        <label for="amount" class="form-label">Сумма:</label>
        <input type="number" class="form-control" id="amount" name="amount" step="0.01" required />
    </div>
    <button type="submit" class="btn btn-primary">Снять</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p class="mb-0">@error.ErrorMessage</p>
        }
    </div>
}

<a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-link">Назад к деталям счета</a>
