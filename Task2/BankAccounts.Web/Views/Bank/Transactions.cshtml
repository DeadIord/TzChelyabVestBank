@model IEnumerable<BankAccount.Core.Models.Transaction>

<h1 class="mb-4">История транзакций</h1>

<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>Дата</th>
            <th>Тип</th>
            <th>Сумма</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model)
        {
            <tr>
                <td>@transaction.Date.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@transaction.Type</td>
                <td>@transaction.Amount.ToString("C2")</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-link">Назад к списку счетов</a>
